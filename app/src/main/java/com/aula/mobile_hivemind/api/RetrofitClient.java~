package com.aula.mobile_hivemind.api;

import java.util.concurrent.TimeUnit;

import okhttp3.OkHttpClient;
import okhttp3.logging.HttpLoggingInterceptor;
import retrofit2.Retrofit;
import retrofit2.converter.gson.GsonConverterFactory;

import com.google.gson.Gson;
import com.google.gson.GsonBuilder;
import java.sql.Time;
import java.sql.Date;
import java.text.SimpleDateFormat;
public class RetrofitClient {
    private static final String BASE_MONGO = "https://api-mongo-kmyg.onrender.com";
    private static final String BASE_SQL = "https://api-2-0mqv.onrender.com";
    private static Retrofit retrofitMongo = null;
    private static Retrofit retrofitSQL = null;


    public static ApiMongoRegistroParadasService getApiMongoRegistroService() {
        if (retrofitMongo == null) {
            HttpLoggingInterceptor logging = new HttpLoggingInterceptor();
            logging.setLevel(HttpLoggingInterceptor.Level.BODY);

            OkHttpClient client = new OkHttpClient.Builder()
                    .addInterceptor(logging)
                    .addInterceptor(new BasicAuthInterceptor("admin", "teste"))
                    .connectTimeout(45, TimeUnit.SECONDS)
                    .readTimeout(45, TimeUnit.SECONDS)
                    .writeTimeout(45, TimeUnit.SECONDS)
                    .build();

            Gson gson = new GsonBuilder()
                    .registerTypeAdapter(Date.class, (com.google.gson.JsonSerializer<Date>) (src, typeOfSrc, context) ->
                            new com.google.gson.JsonPrimitive(new SimpleDateFormat("yyyy-MM-dd").format(src)))
                    .registerTypeAdapter(Time.class, (com.google.gson.JsonSerializer<Time>) (src, typeOfSrc, context) ->
                            new com.google.gson.JsonPrimitive(new SimpleDateFormat("HH:mm:ss").format(src)))
                    .create();


            retrofitMongo = new Retrofit.Builder()
                    .baseUrl(BASE_MONGO) // ✅ Usa URL MongoDB
                    .client(client)
                    .addConverterFactory(GsonConverterFactory.create(gson))
                    .build();
        }
        return retrofitMongo.create(ApiMongoRegistroParadasService.class);
    }

    public static ApiManutencaoService getApiManutencaoService() {
        if (retrofitSQL == null) {
            HttpLoggingInterceptor logging = new HttpLoggingInterceptor();
            logging.setLevel(HttpLoggingInterceptor.Level.BODY);

            OkHttpClient client = new OkHttpClient.Builder()
                    .addInterceptor(logging)
                    .addInterceptor(new BasicAuthInterceptor("admin", "teste"))
                    .connectTimeout(45, TimeUnit.SECONDS)
                    .readTimeout(45, TimeUnit.SECONDS)
                    .writeTimeout(45, TimeUnit.SECONDS)
                    .build();

            Gson gson = new GsonBuilder()
                    .registerTypeAdapter(Date.class, (com.google.gson.JsonSerializer<Date>) (src, typeOfSrc, context) ->
                            new com.google.gson.JsonPrimitive(new SimpleDateFormat("yyyy-MM-dd").format(src)))
                    .registerTypeAdapter(Time.class, (com.google.gson.JsonSerializer<Time>) (src, typeOfSrc, context) ->
                            new com.google.gson.JsonPrimitive(new SimpleDateFormat("HH:mm:ss").format(src)))
                    .create();

            retrofitSQL = new Retrofit.Builder()
                    .baseUrl(BASE_SQL) // ✅ Usa URL SQL
                    .client(client)
                    .addConverterFactory(ScalarsConverterFactory.create())
                    .addConverterFactory(GsonConverterFactory.create(gson))
                    .build();
        }
        return retrofitSQL.create(ApiManutencaoService.class);
    }
}