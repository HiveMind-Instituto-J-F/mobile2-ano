<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_off"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminateTint="@color/blue_primary" />

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textTituloDashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/blue_dark"
                android:fontFamily="@font/lexend_deca_medium" />

            <TextView
                android:id="@+id/textPeriodo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visão geral do mês atual"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/gray_dark"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lexend_deca" />
        </LinearLayout>

        <!-- Cards de Métricas -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Indicadores Principais"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/blue_dark"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/lexend_deca_semibold" />

        <!-- Card 1: Total Paradas e Tempo Médio -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/white_off">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:background="@drawable/bg_card_gradient">

                <!-- Total Paradas -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_paradas"
                        android:tint="@color/blue_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Paradas"
                        android:textSize="12sp"
                        android:textColor="@color/gray_dark"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/lexend_deca" />

                    <TextView
                        android:id="@+id/textTotalParadas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_primary"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/lexend_deca_semibold" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:background="@color/blue_primary"
                    android:alpha="0.2"
                    android:layout_gravity="center" />

                <!-- Tempo Médio -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_tempo"
                        android:tint="@color/orange_accent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tempo Médio"
                        android:textSize="12sp"
                        android:textColor="@color/gray_dark"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/lexend_deca" />

                    <TextView
                        android:id="@+id/textTempoMedio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 min"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/orange_accent"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/lexend_deca_semibold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 2: Máquina e Setor Problemáticos -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:elevation="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/white_off">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20px"
                android:background="@drawable/bg_card_gradient">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Análise de Problemas"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_dark"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/lexend_deca_semibold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Máquina Problemática -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_maquina"
                                android:tint="@color/blue_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Máquina com Mais Paradas"
                                android:textSize="12sp"
                                android:textColor="@color/gray_dark"
                                android:layout_marginStart="8dp"
                                android:fontFamily="@font/lexend_deca" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textMaquinaProblema"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nenhuma"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/blue_dark"
                            android:background="@drawable/bg_chip"
                            android:padding="8dp"
                            android:fontFamily="@font/lexend_deca_semibold" />
                    </LinearLayout>

                    <!-- Setor Problemático -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_setor"
                                android:tint="@color/orange_accent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Setor com Mais Paradas"
                                android:textSize="12sp"
                                android:textColor="@color/gray_dark"
                                android:layout_marginStart="8dp"
                                android:fontFamily="@font/lexend_deca" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textSetorProblema"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nenhum"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/blue_dark"
                            android:background="@drawable/bg_chip"
                            android:padding="8dp"
                            android:fontFamily="@font/lexend_deca_semibold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Gráfico de Evolução Mensal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evolução Mensal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/blue_dark"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/lexend_deca_semibold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="@color/white_off">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChartEvolucao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>