<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/blue_dark">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_gradient_header"
        android:paddingTop="40dp"
        android:paddingBottom="20dp"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnVoltar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/arrow_back"
            app:tint="@color/white_off" />

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lexend_deca_medium"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Histórico Diário"
            android:textColor="@color/white_off"
            android:textSize="20sp" />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>

    <!-- Card Principal -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/white_off"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header do Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_history"
                    app:tint="@color/blue_primary" />

                <TextView
                    android:id="@+id/txtParada"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/lexend_deca_semibold"
                    android:text="Paradas de Hoje"
                    android:textColor="@color/blue_dark"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtDataAtual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_deca"
                    android:text="01/12/2023"
                    android:textColor="@color/gray_dark"
                    android:textSize="14sp"
                    android:background="@drawable/bg_chip"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp" />
            </LinearLayout>

            <!-- Estatísticas Rápidas -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:background="@drawable/bg_card_stats"
                android:padding="16dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txtTotalHoje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/blue_primary"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/lexend_deca_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textColor="@color/gray_dark"
                        android:textSize="12sp"
                        android:fontFamily="@font/lexend_deca" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:background="@color/blue_primary"
                    android:alpha="0.2" />
            </LinearLayout>

            <!-- Lista de Paradas -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewHistorico"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:listitem="@layout/parada_item_recycleview_principal"/>

            <!-- Estado Vazio -->
            <LinearLayout
                android:id="@+id/emptyState"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:padding="40dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_empty_history"
                    app:tint="@color/gray_dark"
                    android:alpha="0.5"
                    android:layout_marginBottom="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_deca_semibold"
                    android:text="Nenhuma Parada Hoje"
                    android:textColor="@color/gray_dark"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_deca"
                    android:gravity="center"
                    android:text="Não há paradas registradas para hoje. As paradas aparecerão aqui quando forem adicionadas."
                    android:textColor="@color/gray_dark"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>