<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardSetor"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#EAF5FF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Título secundário -->
        <TextView
            android:id="@+id/txtSetor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setor da maquina"
            android:textColor="#888C9F"
            android:textSize="14sp"
            android:fontFamily="@font/lexend_deca" />

        <!-- Ícone no topo direito -->
        <ImageView
            android:id="@+id/iconAlerta"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_icon_circle"
            android:padding="6dp"
            android:src="@drawable/ic_warning"
            app:tint="#0051FF"
            android:contentDescription="Alerta" />

        <!-- Título principal -->
        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtSetor"
            android:layout_marginTop="8dp"
            android:text="Maquina e id"
            android:textColor="#121212"
            android:textSize="20sp"
            android:fontFamily="@font/lexend_deca_semibold" />

        <!-- Barra de progresso customizada -->
        <ProgressBar
            android:id="@+id/progresso"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="12dp"
            android:progress="50"
            android:progressDrawable="@drawable/progress_custom"
            android:background="@android:color/transparent" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
