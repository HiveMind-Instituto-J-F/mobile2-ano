<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white_off">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Indicador de Status -->
        <View
            android:id="@+id/indicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/blue_primary"
            android:layout_marginEnd="12dp" />

        <!-- Ícone -->
        <ImageView
            android:id="@+id/icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notification"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:tint="@color/blue_primary" />

        <!-- Conteúdo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título da Notificação"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue_dark"
                android:fontFamily="@font/lexend_deca_semibold" />

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mensagem da notificação..."
                android:textSize="14sp"
                android:textColor="@color/gray_dark"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lexend_deca" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8px">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="12/12/2023"
                    android:textSize="12sp"
                    android:textColor="@color/gray_dark"
                    android:fontFamily="@font/lexend_deca" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:30"
                    android:textSize="12sp"
                    android:textColor="@color/gray_dark"
                    android:fontFamily="@font/lexend_deca" />

            </LinearLayout>

        </LinearLayout>

        <!-- Badge de Status -->
        <TextView
            android:id="@+id/badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nova"
            android:textSize="10sp"
            android:textColor="@color/white_off"
            android:background="@drawable/badge_new"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_gravity="top"
            android:visibility="gone"
            android:fontFamily="@font/lexend_deca" />

    </LinearLayout>

</androidx.cardview.widget.CardView>