<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_dark"
    tools:context=".ui.home.paradas.MaintenanceFragment">

    <!-- Header Gradient -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_gradient_header"
            android:paddingTop="40dp"
            android:paddingBottom="24dp">

            <ImageButton
                android:id="@+id/btnVoltar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/arrow_back"
                app:tint="@color/white_off" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lexend_deca_medium"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="Manutenção da máquina"
                android:textColor="@color/white_off"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/lexend_deca"
                android:gravity="center_horizontal"
                android:text="Insira o relatório do que foi feito na máquina"
                android:textColor="@color/white_off"
                android:textSize="14sp"
                android:alpha="0.9" />
        </LinearLayout>

        <!-- Form Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white_off">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Seção: Informações de Manutenção -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_deca_medium"
                    android:textStyle="bold"
                    android:text="Informações de Manutenção"
                    android:textColor="@color/blue_dark"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/lexend_deca"
                    android:text="Especifique a data do reparo e relate o que você fez no conserto"
                    android:textColor="@color/gray_dark"
                    android:textSize="14sp" />

                <!-- Número de Série (ID da Máquina) -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutNumeroSerie"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/blue_primary"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:hintTextColor="@color/gray_dark"
                    app:startIconDrawable="@drawable/ic_info"
                    app:startIconTint="@color/blue_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editNumeroSerie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Número de Série"
                        android:inputType="number"
                        android:textColor="@color/blue_dark"
                        android:enabled="false" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- ID do Funcionário -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutIdFunc"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/blue_primary"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:hintTextColor="@color/gray_dark"
                    app:startIconDrawable="@drawable/ic_id"
                    app:startIconTint="@color/blue_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editIdFunc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ID do Funcionário"
                        android:inputType="number"
                        android:textColor="@color/blue_dark"
                        android:enabled="false" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Data do Reparo -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutDATAMANUTENCAO"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/blue_primary"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:hintTextColor="@color/gray_dark"
                    app:startIconDrawable="@drawable/ic_calendar"
                    app:startIconTint="@color/blue_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextDATAMANUTENCAO"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Data do Reparo"
                        android:focusable="false"
                        android:inputType="none"
                        android:textColor="@color/blue_dark" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Hora de Início -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutHoraInicio"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/blue_primary"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:hintTextColor="@color/gray_dark"
                    app:startIconDrawable="@drawable/ic_clock"
                    app:startIconTint="@color/blue_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextHoraInicio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Hora de Início"
                        android:focusable="false"
                        android:inputType="none"
                        android:textColor="@color/blue_dark" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Hora de Término -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutHoraFim"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/blue_primary"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:hintTextColor="@color/gray_dark"
                    app:startIconDrawable="@drawable/ic_clock"
                    app:startIconTint="@color/blue_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextHoraFim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Hora de Término"
                        android:focusable="false"
                        android:inputType="none"
                        android:textColor="@color/blue_dark" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Relatório -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutRelatorio"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:boxStrokeColor="@color/blue_primary"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:hintTextColor="@color/gray_dark"
                    app:startIconDrawable="@drawable/ic_descricao"
                    app:startIconTint="@color/blue_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editRelatorio"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:gravity="top"
                        android:hint="Relatório do que foi feito"
                        android:inputType="textMultiLine"
                        android:textColor="@color/blue_dark" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botão Concluir -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_concluir_relatorio"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:backgroundTint="@color/blue_primary"
                    android:text="CONCLUIR RELATÓRIO"
                    android:textColor="@color/white_off"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_check"
                    app:iconTint="@color/white_off" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>