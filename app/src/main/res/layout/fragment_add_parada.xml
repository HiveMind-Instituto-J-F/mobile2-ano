<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_dark"
    tools:context=".ui.home.paradas.AddParadaFragment">

    <!-- Header Gradient -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_gradient_header"
            android:paddingTop="40dp"
            android:paddingBottom="24dp">

            <ImageButton
                android:id="@+id/btnVoltar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/arrow_back"
                android:tint="@color/white_off" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lexend_deca_medium"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:text="Adicionar Parada"
                android:textColor="@color/white_off"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/lexend_deca"
                android:gravity="center_horizontal"
                android:text="Insira as informações necessárias para reportar a parada"
                android:textColor="@color/white_off"
                android:textSize="14sp"
                android:alpha="0.9" />
        </LinearLayout>

        <!-- Form Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white_off">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Seção: Informações Básicas -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_deca_medium"
                    android:textStyle="bold"
                    android:text="Informações da Máquina"
                    android:textColor="@color/blue_dark"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="@font/lexend_deca"
                    android:text="Especifique os dados da máquina e da parada"
                    android:textColor="@color/gray_dark"
                    android:textSize="14sp" />

                <!-- ID da Máquina -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutIdMaquina"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/blue_primary"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:hintTextColor="@color/gray_dark"
                    app:startIconDrawable="@drawable/ic_id"
                    app:startIconTint="@color/blue_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editIdMaquina"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ID da Máquina"
                        android:inputType="number"
                        android:textColor="@color/blue_dark" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botão Buscar Máquina -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnBuscarMaquina"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="16dp"
                    android:text="Buscar Máquina"
                    android:textColor="@color/blue_primary"
                    app:icon="@drawable/ic_search"
                    app:iconTint="@color/blue_primary"
                    app:strokeColor="@color/blue_primary"
                    app:cornerRadius="12dp" />

                <!-- Nome da Máquina -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutNomeMaquina"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/blue_primary"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:hintTextColor="@color/gray_dark"
                    app:startIconDrawable="@drawable/ic_maquina"
                    app:startIconTint="@color/blue_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editNomeMaquina"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nome da Máquina"
                        android:inputType="text"
                        android:textColor="@color/blue_dark"
                        android:focusable="false"
                        android:clickable="false" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Setor -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutSetor"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/blue_primary"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:hintTextColor="@color/gray_dark"
                    app:startIconDrawable="@drawable/ic_setor"
                    app:startIconTint="@color/blue_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textSetor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Setor"
                        android:inputType="text"
                        android:textColor="@color/blue_dark" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Descrição -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutDescricao"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/blue_primary"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:hintTextColor="@color/gray_dark"
                    app:startIconDrawable="@drawable/ic_descricao"
                    app:startIconTint="@color/blue_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editDescricaoParada"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:gravity="top"
                        android:hint="Descrição da Parada"
                        android:inputType="textMultiLine"
                        android:textColor="@color/blue_dark" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Data da Parada -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutDATAPARADA"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/blue_primary"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:hintTextColor="@color/gray_dark"
                    app:startIconDrawable="@drawable/ic_calendar"
                    app:startIconTint="@color/blue_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextDATAPARADA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Data da Parada"
                        android:focusable="false"
                        android:inputType="none"
                        android:textColor="@color/blue_dark" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Hora de Início -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutHoraInicio"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/blue_primary"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:hintTextColor="@color/gray_dark"
                    app:startIconDrawable="@drawable/ic_clock"
                    app:startIconTint="@color/blue_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextHoraInicio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Hora de Início"
                        android:focusable="false"
                        android:inputType="none"
                        android:textColor="@color/blue_dark" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Hora de Término -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputLayoutHoraFim"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:boxStrokeColor="@color/blue_primary"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    app:hintTextColor="@color/gray_dark"
                    app:startIconDrawable="@drawable/ic_clock"
                    app:startIconTint="@color/blue_primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextHoraFim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Hora de Término"
                        android:focusable="false"
                        android:inputType="none"
                        android:textColor="@color/blue_dark" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Botão Adicionar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAdicionarParada"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:backgroundTint="@color/blue_primary"
                    android:text="Adicionar Parada"
                    android:textColor="@color/white_off"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_add"
                    app:iconTint="@color/white_off" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>