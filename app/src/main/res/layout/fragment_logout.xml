<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_dark"
    tools:context=".auth.LogoutFragment">

    <!-- Background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient_login" />

    <!-- Botão Fechar -->
    <ImageButton
        android:id="@+id/btnFechar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/arrow_back"
        android:tint="@color/white_off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Card do Perfil - CORRIGIDO: Centralizado verticalmente -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardBackgroundColor="@color/white_off"
        app:cardCornerRadius="28dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"> <!-- Alterado de 0.0 para 0.5 para centralizar -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Foto de Perfil -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgFoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircularShape"
                app:strokeColor="@color/blue_primary"
                app:strokeWidth="3dp"
                app:srcCompat="@drawable/img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_deca_medium"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Meu Perfil"
                android:textColor="@color/blue_dark"
                android:textSize="24sp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp" />

            <!-- Informações do Usuário -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white_off"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/blue_primary"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Email -->
                        <LinearLayout
                            android:id="@+id/itemInfoConta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingTop="16dp"
                            android:paddingBottom="20dp"> <!-- aumenta espaço inferior -->

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_user"
                                android:tint="@color/blue_primary" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:fontFamily="@font/lexend_deca_semibold"
                                android:text="Usuário:"
                                android:textColor="@color/blue_dark"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/usuarioLogado"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:fontFamily="@font/lexend_deca"
                                android:gravity="end"
                                android:text="usuario@email.com"
                                android:textColor="@color/gray_dark"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="8dp"
                            android:background="@color/blue_primary"
                            android:alpha="0.1" />

                        <!-- Setor -->
                        <LinearLayout
                            android:id="@+id/itemInfoSetor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingTop="20dp"
                            android:paddingBottom="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_setor"
                                android:tint="@color/blue_primary" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="16dp"
                                android:fontFamily="@font/lexend_deca_semibold"
                                android:text="Setor:"
                                android:textColor="@color/blue_dark"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/txtSetorUsuario"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:fontFamily="@font/lexend_deca"
                                android:gravity="end"
                                android:text="Produção"
                                android:textColor="@color/gray_dark"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Histórico Diário (visível apenas para operadores) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/itemInfoHistorico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/white_off"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/blue_primary"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_history"
                        android:tint="@color/blue_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/lexend_deca_semibold"
                        android:text="Histórico Diário"
                        android:textColor="@color/blue_dark"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@color/blue_primary" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Botão Sair -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSair"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Sair da Conta"
                android:textColor="@color/blue_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:icon="@drawable/ic_logout"
                app:iconTint="@color/blue_primary"
                app:strokeColor="@color/blue_primary"
                app:strokeWidth="2dp"
                app:cornerRadius="12dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>