<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OtpBox">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/otp_background</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:maxLength">1</item>
    </style>

    <style name="ConfigItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="ConfigLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/lexend_deca</item>
    </style>

    <style name="CalendarHeader" parent="TextAppearance.MaterialCalendarWidget.Header">
        <item name="android:textColor">#1A1A1A</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/lexend_deca</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="CalendarWeek" parent="TextAppearance.MaterialCalendarWidget.WeekDay">
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CalendarDate" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textColor">#1A1A1A</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>